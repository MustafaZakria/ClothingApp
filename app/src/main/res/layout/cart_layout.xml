<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"

    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="#B7FFFFFF"
    app:cardElevation="1dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="165dp"
            android:layout_height="195dp"
            android:scaleType="fitXY"
            android:src="@drawable/product"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
<!--
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EGP 300"
            android:textSize="15sp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_cart"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:textFontWeight="900"
            android:layout_marginTop="12dp"/>
-->
        <TextView
            android:id="@+id/tv_cart_name"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_cart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_cart_desc"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_cart"
            app:layout_constraintTop_toBottomOf="@+id/tv_cart_name"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/tv_cart_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_cart"
            app:layout_constraintTop_toBottomOf="@+id/tv_cart_desc"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:paddingTop="5dp"
            />

        <TextView
            android:id="@+id/tv_cart_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_cart"
            app:layout_constraintTop_toBottomOf="@+id/tv_cart_color"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:paddingTop="5dp"
            />

        <TextView
            android:id="@+id/tv_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/black"
            android:textFontWeight="900"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
